@article{Tsunoda2020VarTro,
  title = {Variations in the Trophic Niches of the Golden Jackal {{Canis}} Aureus across the {{Eurasian}} Continent Associated with Biogeographic and Anthropogenic Factors},
  author = {Tsunoda, Hiroshi and Saito, Masayuki U.},
  year = {2020},
